{
    "name": "vendor/this-light",
    "description": "This Light website",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "This Light",
            "email": "loftmusic.ca@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "ThisLight\\": "classes/ThisLight/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ThisLight\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "phpcs": "powershell -Command \"Get-ChildItem -Recurse -Filter '*.php' | Where-Object { $_.FullName -notmatch 'vendor' } | ForEach-Object { & 'vendor/bin/phpcs' --standard=WordPress $_.FullName }\"",
        "phpcbf": "powershell -Command \"Get-ChildItem -Recurse -Filter '*.php' | Where-Object { $_.FullName -notmatch 'vendor' } | ForEach-Object { & 'vendor/bin/phpcbf' --standard=WordPress $_.FullName }\""
    },
    "require": {
        "php": "^7.4 || ^8.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.11",
        "wp-coding-standards/wpcs": "^3.1"
    },
    "config": {
        "preferred-install": "dist",
        "optimize-autoloader": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
